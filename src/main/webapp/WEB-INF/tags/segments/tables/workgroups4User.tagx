<jsp:root
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:spring="http://www.springframework.org/tags"
	xmlns:form="http://www.springframework.org/tags/form"
	xmlns:shept-pager="http://www.shept.org/tags/shept-pager"
	xmlns:shept-opt="http://www.shept.org/tags/shept-opt"
	xmlns:shept-core="http://www.shept.org/tags/shept-core"
	version="2.0"
>

	<shept-core:table > 
	  <jsp:attribute name="tabHeader" >
		<tr class="sheptTableHeader" >
			<th />
			<th />
			<th >
				<shept-pager:sort sortCol="workgroup.name" code="user" />
			</th>
		</tr>
	  </jsp:attribute>
	  
	  <jsp:attribute name="tabRow" >
		<tr class="${rowClassDefault}">
			<td width="24px" >
				<form:checkbox path="selection" />
			</td>
 			<td width="24px" >
				<c:choose>
					<c:when test="${rowObject.selected}">
						<img src="${images}/16x16/accept.png" alt="" />
					</c:when>
					<c:otherwise>
						<img src="${images}/16x16/blank.png" alt="" />
					</c:otherwise>
				</c:choose>
			</td>
			<td >
				<c:choose>
					<c:when test="${isDeleted}">
						<strike>
							<c:out value="${rowObject.workgroup.name}"></c:out>
						</strike>
					</c:when>
					<c:otherwise>
						<c:out value="${rowObject.workgroup.name}"></c:out>
					</c:otherwise>
				</c:choose>
			</td>
		</tr>
	  </jsp:attribute>

	  <jsp:attribute name="tabSubmit" >
	  	<shept-opt:submission />
	  </jsp:attribute>
	</shept-core:table>

</jsp:root>